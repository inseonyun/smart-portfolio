<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <!-- 날짜 부분 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:id="@+id/tv_day"
            android:text="날짜"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:id="@+id/tv_month"
            android:text="월"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:id="@+id/tv_year"
            android:text="2022"
            android:textStyle="italic"
            android:textAlignment="center"/>

    </LinearLayout>

    <!-- 타임라인 막대 부분 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="3dp"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:background="@color/timeline_gray"
            android:layout_gravity="center"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/iv_timeline_circle"
            android:src="@drawable/img_blue_timeline_circle"/>

        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:background="@color/timeline_gray"
            android:layout_gravity="center"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/iv_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/test_img"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This is title"
                style="@style/portfolio_textView_title"/>

            <TextView
                android:id="@+id/tv_contents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This is contents"
                style="@style/portfolio_textView_contents" />

            <TextView
                android:id="@+id/tv_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="link"
                android:autoLink="web"
                style="@style/portfolio_textView_link"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>